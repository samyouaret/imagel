<%- include('../layouts/header'); %>
<form method="POST" action="/images/<%= image.id %>/?_method=PUT" enctype="multipart/form-data"
    class="mx-auto md:max-w-screen-md">
    <h1 class="text-2xl text-gray-800 my-4">update image</h1>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <div>
        <label class="form-label">Title:</label>
        <input class="form-control" type="text" name="title" value="<%= image.title %>" />
    </div>
    <div>
        <label class="form-label">Description:</label>
        <input class="form-control" type="text" name="description" value="<%= image.description %>" />
    </div>
    <div>
        <img class="my-4 w-32 h-auto" src="/storage/uploads/<%= image.url %>" alt="<%= image.description %>" />
        <label class="form-label">please upload new image </label>
        <input class="form-control" type="file" name="image" />
    </div>
    <div>
        <input class="btn bg-blue-700 text-white" type="submit" value="Save" />
    </div>
</form>
<%- include('../layouts/footer'); %>